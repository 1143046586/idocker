{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@common/*": [
        "../common/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "index.ts",
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}